<% title "Posts" %>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%=h post.name %></td>
      <td><%=h post.content %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Post", new_post_path %></p>
